<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:WorkoutManagerUI.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="WorkoutManagerUI.Views.ExercisesView"
             x:DataType="vm:ExercisesViewModel">

    <Design.DataContext>
        <vm:ExercisesViewModel/>
    </Design.DataContext>

    <Grid RowDefinitions="Auto,*">
        <TextBlock Grid.Row="0" 
                  Text="My Exercises" 
                  FontSize="28" 
                  FontWeight="Bold"
                  Margin="0,0,0,20"/>
        
        <ScrollViewer Grid.Row="1">
            <ItemsControl ItemsSource="{Binding Exercises}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="White" 
                               CornerRadius="8" 
                               Padding="15" 
                               Margin="0,0,0,10">
                            <Grid ColumnDefinitions="*,Auto">
                                <StackPanel Grid.Column="0" Spacing="8">
                                    <TextBlock Text="{Binding Name}" 
                                              FontSize="20" 
                                              FontWeight="Bold"/>
                                    <TextBlock Text="{Binding Description}" 
                                              Foreground="#7F8C8D"
                                              TextWrapping="Wrap"/>
                                    <StackPanel Orientation="Horizontal" Spacing="20">
                                        <TextBlock>
                                            <Run Text="Difficulty: "/>
                                            <Run Text="{Binding DifficultyLevel}" FontWeight="Bold"/>
                                        </TextBlock>
                                        <TextBlock>
                                            <Run Text="Sets: "/>
                                            <Run Text="{Binding Sets}" FontWeight="Bold"/>
                                        </TextBlock>
                                        <TextBlock>
                                            <Run Text="Reps: "/>
                                            <Run Text="{Binding Reps}" FontWeight="Bold"/>
                                        </TextBlock>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>
