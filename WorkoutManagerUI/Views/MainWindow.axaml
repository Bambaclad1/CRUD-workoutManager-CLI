<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:WorkoutManagerUI.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="600"
        x:Class="WorkoutManagerUI.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="Workout Manager"
        Width="1000"
        Height="600">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Grid ColumnDefinitions="200,*">
        <!-- Sidebar Navigation -->
        <Border Grid.Column="0" Background="#2C3E50" Padding="10">
            <StackPanel Spacing="10">
                <TextBlock Text="Workout Manager" 
                          FontSize="20" 
                          FontWeight="Bold" 
                          Foreground="White" 
                          Margin="0,0,0,20"/>
                
                <Button Content="🏠 Home" 
                       Command="{Binding ShowHomeCommand}"
                       HorizontalAlignment="Stretch"
                       HorizontalContentAlignment="Left"
                       Padding="10"/>
                
                <Button Content="💪 Exercises" 
                       Command="{Binding ShowExercisesCommand}"
                       HorizontalAlignment="Stretch"
                       HorizontalContentAlignment="Left"
                       Padding="10"/>
                
                <Button Content="➕ Create Exercise" 
                       Command="{Binding ShowCreateExerciseCommand}"
                       HorizontalAlignment="Stretch"
                       HorizontalContentAlignment="Left"
                       Padding="10"/>
            </StackPanel>
        </Border>

        <!-- Main Content Area -->
        <Border Grid.Column="1" Background="#ECF0F1" Padding="20">
            <ContentControl Content="{Binding CurrentViewModel}"/>
        </Border>
    </Grid>
</Window>
